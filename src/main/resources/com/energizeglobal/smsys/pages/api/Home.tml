<html t:type="layout" xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd">
<head>
    <style>
        #main {
            width: 500px;
            margin: 0 auto;
            border: 2px solid darkseagreen;
        }
    </style>
    <link rel="stylesheet" href="http://cdn.rawgit.com/jtblin/angular-chart.js/master/dist/angular-chart.css"
          type="text/css"/>
    <script src="http://cdn.rawgit.com/nnnick/Chart.js/master/Chart.min.js" type="text/javascript"/>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.9/angular.min.js" type="text/javascript"/>
    <script src="http://cdn.rawgit.com/jtblin/angular-chart.js/master/dist/angular-chart.js" type="text/javascript"/>

</head>

<br/>
<div class="container">
    <div class="row">
        <div class="col-md-9">
            <div class="panel panel-default">
                <div class="panel-body">
                    <div class="row">
                        <div class="col-md-12 lead">User profile
                            <hr/>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4 text-center">
                            <img class="img-circle avatar avatar-original" style="-webkit-user-select:none;
              display:block; margin:auto;" src="${getExternalImageLink(user.id)}" width="160" height="160"/>
                        </div>
                        <div class="col-md-8">
                            <div class="row">
                                <div class="col-md-12">
                                    <h1 class="only-bottom-margin">First Name: ${user.firstName}</h1>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <span class="text-muted">Last Name:</span> ${user.lastName}<br/>
                                    <span class="text-muted">Email:</span> ${user.email}<br/>
                                    <span class="text-muted">Birth date:</span>
                                    <t:output format="message:application.main.date.format" value="user.dob"/>
                                    <br/>
                                    <span class="text-muted">Gender:</span>${user.gender}<br/><br/>

                                </div>
                                <div class="col-md-6">
                                    <div class="activity-mini">
                                        <i class="glyphicon glyphicon-comment text-muted"></i> 500
                                    </div>
                                    <div class="activity-mini">
                                        <i class="glyphicon glyphicon-thumbs-up text-muted"></i> 1500
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <hr/>
                            <a t:type="pagelink" page="api/editprofile" class="btn btn-primary pull-right"> <i
                                    class="glyphicon glyphicon-pencil"></i>Edit Profile</a>
                            <a t:type="actionlink" t:id="invalidate" class="btn btn-primary pull-left"> Log Out</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div ng-controller="homeCtrl">

    <t:if test="isAdmin">
        <div class="container" style="border: 1px solid wheat">
            <hr/>
            <h3> Users List </h3>
            <div class="row" id="userList">
                <table class="table-responsive">
                    <thead>
                    <tr>
                        <th class="col-xs-1"></th>
                        <th class="col-xs-2">Last Name</th>
                        <th class="col-xs-2">First Name</th>
                        <th class="col-xs-2">Email</th>
                        <th class="col-xs-2">Gender</th>
                        <th class="col-xs-2">Status</th>
                        <th class="col-xs-1"></th>
                    </tr>
                    </thead>
                    <tbody>
                    <tr t:type="Loop" t:source="users"  t:value="item" ng-class-odd="'alt'">
                        <td class="col-xs-1"><img src="${getExternalImageLink(item.getId())}"
                                                  class="img-thumbnail img-responsive img-circle"/></td>
                        <td class="col-xs-2 cap">${item.firstName}</td>
                        <td class="col-xs-2 cap">${item.lastName}</td>
                        <td class="col-xs-2 strong">${item.email}</td>
                        <td class="col-xs-2">${item.gender}</td>
                        <td class="col-xs-2">${item.status}</td>
                        <td>
                            <a t:type="actionlink" t:id="status" t:context="index"
                               class="btn btn-primary pull-left">
                                <t:if test="active">
                                    Disable
                                </t:if>
                                <t:if test="!active">
                                    Enable
                                </t:if>
                            </a>
                        </td>
                    </tr>
                    </tbody>
                </table>

            </div><!--/row-->

        </div><!--/container-->
    </t:if>
    <div style="width:500px; height: 400px; margin:0 auto">
        <h3>Health Details</h3>
        <canvas id="bar" class="chart chart-bar" chart-data="data" chart-labels="labels"
                chart-legend="true" chart-series="series" chart-click="onClick"></canvas>
    </div>


</div>

<script type="text/javascript" src="../webjars/angularjs/1.4.0/angular.js"/>
<script type="text/javascript" src="../webjars/jquery/2.1.4/jquery.js"/>

<script type="text/javascript">
    var SMSys = SMSys || {};
</script>

<script type="text/javascript" src="../js/app.js"/>
<script type="text/javascript" src="../js/config/namespace.js"/>
<script type="text/javascript" src="../js/controllers/home.js"/>

</html>