<html t:type="layout" xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd" xmlns:p="tapestry:parameter">


<div class="row">
    <div class="col-md-4 col-md-offset-4">
        <h1>Edit Profile</h1>
        <form t:type="beaneditform" t:id="editForm" object="user" exclude="id, status, userType, password" add="avatar" submitLabel="Update">
            <p:avatar>
                <t:label for="avatar"/>
                <input t:type="upload" t:id="avatar" value="avatar"/>
            </p:avatar>
        </form>

    </div>
</div>


<a t:type="pagelink" page="api/home">Home</a>


</html>